{
  "name": "start-testing",
  "version": "0.1.0",
  "description": "A crowdsourced testing course, written by testers for testers wannabes.",
  "scripts": {
    "clean": "rm -r node_modules",
    "build": "npm run lint",
    "lint": "npm-run-all lint:*",
    "lint:markdown": "markdownlint docs --config docs/.markdownlint.json",
    "lint:spelling": "mdspell 'docs/**/*.md' -r --en-gb --ignore-numbers --ignore-acronyms",
    "lint:broken-links-internal": "echo 'Skipping validation because \"remark validate-links\" returns false positives. (see https://github.com/dialex/start-testing/issues/54)'",
    "lint:broken-links-external": "echo 'Skipping validation because \"remark lint-no-dead-urls\" returns false positives. (see https://github.com/davidtheclark/remark-lint-no-dead-urls/issues/12)'",
    "postinstall": "gem install --no-ri --no-rdoc awesome_bot",
    "pr:prepare": "npm-run-all lint:markdown pr:spelling lint:broken-* run",
    "pr:replace": "npm-run-all pr:replace-*",
    "pr:replace-dash": "find docs -type f -name '*.md' | xargs sed -i '' 's/--/—/g'",
    "pr:replace-ellipsis": "find docs -type f -name '*.md' | xargs sed -i '' 's/\\.\\.\\./…/g'",
    "pr:spelling": "mdspell 'docs/**/*.md' --en-gb --ignore-numbers --ignore-acronyms",
    "preview": "echo \"Opening a preview on your browser now.\" && sleep 1 && open http://localhost:3000/#/",
    "run": "npm-run-all --parallel serve preview",
    "serve": "docsify serve docs",
    "test": "echo 'Aborting: no tests found. (see https://github.com/dialex/start-testing/issues/70)' && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dialex/start-testing.git"
  },
  "devDependencies": {
    "fakefile": "0.0.9",
    "markdown-spellcheck": "^1.3.1",
    "markdownlint-cli": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-lint-no-dead-urls": "^0.4.1",
    "remark-validate-links": "^7.1.2"
  },
  "remarkConfig": {
    "plugins": [
      "remark-lint-no-dead-urls"
    ]
  },
  "author": "Diogo Nunes <email@diogonunes.com> (https://diogonunes.com/)",
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/dialex/start-testing/issues"
  },
  "homepage": "https://github.com/dialex/start-testing"
}
